		-	const event = {img:require("./img/photo4.png"), header: "this is the title", dataNum: "24", dataMonth:"Aug", text: "Lorem ipsum dolor sit amet, consectetur adipiscing elit."};
		.content
			+header("standard  buttons")
			.standart-buttons
				.standart-buttons__block
					+button-ripple({name: "button", small: true, green: true})
				.standart-buttons__block
					+button-ripple({name: "button", small: false, green: true})
				.standart-buttons__block
					+button-ripple({name: "button", small: false, green: false})
				.standart-buttons__block
					+button-ripple({name: "button", small: true, green: false})
			.arrow-buttons
				+header("arrow buttons")
				.arrow-buttons__block
					+arrow({right: false, disabled: false, hover: false})
					+arrow({right: true, disabled: false, hover: false})
					+arrow({right: false, disabled: true, hover: false})
					+arrow({right: true, disabled: true, hover: false})
					+arrow({right: false, disabled: false, hover: true})
					+arrow({right: true, disabled: false, hover: true})
			.percentages
				+header("percentages / pie chart")
				.percentages__block
					+percent(0)
				.percentages__block
					+percent(38)
				.percentages__block
					+percent(62)
				.percentages__block
					+percent(89)
				.percentages__block
					+pie-chart({one:11, two: 26, three: 29})
			+header("sliders")
			.sliders__left
				+bubble-slider(0, 100, 1, 40)
			.sliders__right
				+range()
			.clear
			.stages
				+header("stages")
				.stages__block
					+stage()
			.form-elements
				.header
					+header("form elements")
					.form-elements__form
						+entry-field({placeholder:"Your Name", type:"text", name:"form", correct: false})
						+entry-field({placeholder:"Your Email", type:"text", name:"form", correct: true})
						+text-area({placeholder:"Your Message", name:"form"})
						.form-elements__form_button
							+button-ripple({name: "submit", small: false, green: true})
					.form-elements__togglesTick
						+header("toggles")
						.toggles__block
							.toggles__block_off
								+toggle()
							.toggles__block_on 
								+toggle("checked")
						+header("tick boxes")
						.tick-box
							+tick({name: "radio", id:"one", checked: true})
							+tick({name: "radio", id:"two", checked: false})   
					.clear 
					.form-elements__block_left
						+header("search / drop down") 
						+search("Search") 
						+search("I've not found what I'm looking for..." , " search-error")
						+select({first:"Pure CSS", second:"No JS", third:"Nice!"})   
					.form-elements__block_right 
						+header("user profile")
						+userProfile({img:require("./img/photo1.png"), name:"John Smith", job:"ux designer", color:""})
						+userProfile({img:require("./img/photo2.png"), name:"Sarah Brown", job:"developer", color:"green"})
					.clear  
			.news-events
				+header("news & events") 
				.news-events__block_left
					+news(news)
				.news-events__block_right
					+event(event)
				.clear 
			.location
				+header("location")
				.location__block
					+map({marker:require("./img/marker.png"), lat:37.795680, lng:-122.415021, zoom: 14})
			.calendar-block
				+header("calendar")
				+calendar()
			.messaging
				+header("messaging")
				+message({text:"Hey! So are we cool to meet at the art gallery? Say 8pm", placeholder:"Yeah that sounds great. See you then.",foto:require("./img/photo2.png"), button:"reply"})
			.clear
			.video
				+header("video") 
				+video("https://player.vimeo.com/video/62980495")   