include ../header/header
include ../toggle/toggle
include ../tick/tick

mixin toggles-tick(options)
  -	let {toggleHeader="header", toggleCheck=[], tickHeader="header", tick=[]} = options;

  .toggles-tick
    +header({header: toggleHeader})

    .toggles-tick__toggle-block
      each item in toggleCheck
        +toggle(item)

    +header({header: tickHeader})

    .toggles-tick__tick-block
      each item in tick
        +tick(item)
