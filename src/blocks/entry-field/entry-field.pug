mixin entry-field(options)
  - let correctClass = 'entry-field__state ';
  - correctClass += options.correct ? '' : 'correct_error';
  - let correctText = options.correct ? 'thanks' : 'error'; 

  .entry-field
    input(class="entry-field__form" type="text" name= options.name placeholder= options.placeholder)
    div(class= correctClass)= correctText