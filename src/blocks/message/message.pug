mixin message(options)
  - let {text= "text", placeholder= "placeholder", foto="img", button="button"} = options;
  .message
    .message__header
      .message__chat
        a(href="/mock-address/change-me/", target="_blank", rel="noopener noreferrer")
          img(src=require("./blocks/message/img/chat.png") alt="chat icon")
      .message__camera
        a(href="/mock-address/change-me/", target="_blank", rel="noopener noreferrer")
          img(src=require("./blocks/message/img/camera.png") alt="camera icon")
      .message__name Sarah Brown
      img(class="message__photo" src= foto alt="User photo")
    .message__body
      .message__body_from= text
      .message__body_text-area
        +text-area({ name:"form", placeholder: placeholder})
      .message__body-button
        +button-ripple({text: button, small: false, green: true})