include ../header/header
include ../calendar/calendar
include ../message/message

mixin calendar-message(options)
  - let {calendarhead="header", calendar={}, messaginghead="header", messaging={}} = options;
  .calendar-message
    .calendar-message__block
      +header({header:calendarhead})
      .calendar-message__calendar
        +calendar(calendar)

    .calendar-message__block
      +header({header:messaginghead})
      .calendar-message__message
        +message(messaging)