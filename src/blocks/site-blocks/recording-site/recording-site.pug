include ../../site-header/site-header
include ../../header/header
include ../../calendar/calendar
include ../../entry-field/entry-field
include ../../buttons/buttons
include ../../text-area/text-area
include ../../button/button
include ../../tick/tick
include ../../calendar/calendar

mixin recording-site(options)
  - let {siteHeader={}, calendar={}, title="", tickOne={}, tickTwo={}, entryField={}, textArea= {}, button={}} =  options;

  .recording-site
    +site-header(siteHeader)

    h1.recording-site__header Заполните форму записи на прием

    .recording-site__wrapper
      .recording-site__block
        +calendar(calendar)

      .recording-site__block
        .recording-site__gender
          +header({header: title})

          .recording-site__radio
            span Муж.
            +tick(tickOne)

          .recording-site__radio
            span  Жен. 
            +tick(tickTwo)

        each item in entryField
          .recording-site__field
            +entry-field(item)

        +text-area(textArea)
        +button(button)